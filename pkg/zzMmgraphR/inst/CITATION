citHeader("To cite MmgraphR in publications please use:")

citEntry(entry = "Manual",
    title = "{{MmgraphR}: Graphing for Markov, Hidden Markov, and Mixture Transition Distribution Models}",
    author = personList(as.person("Pauline Adamopoulou")),
    year = sub("-.*", "", meta$Date),
    note = sprintf("R package version %s", meta$Version),
    key          = "MmgraphR",
    url          = "https://CRAN.R-project.org/package=MmgraphR",

  textVersion  =
  paste("Pauline Adamopoulou (2018).",
        "MmgraphR: Graphing for Markov, Hidden Markov, and Mixture Transition Distribution Models.",
        "R package version 0.3.",
        "URL https://CRAN.R-project.org/package=MmgraphR.") 
)
